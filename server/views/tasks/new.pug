extends ../layouts/application.pug

block content
    +formFor()(action=route('createTask') method='post')
        +input(task, 'name', t('views.tasks.name'),errors)(type="text")
        +textarea(task, 'description', errors)(type="text" rows="3")
        +select(task, 'statusId', errors, statuses)
        +select(task, 'executorId', errors, users)
        +select(task, 'labels', errors, labels, true)
        +submit(t('views.manage.submit'), false)